@model DependencyInjection.Mvc.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-5">

        <div class="card">
            <div class="card-header">
                Current Weather Conditions
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.WeatherData.Location (@Model.ZipCode)</h5>
                <p class="card-text">
                    <table class="table ">
                        <tr>
                            <td>Data Provider</td>
                            <td>@Model.WeatherData.DataProvider</td>
                        </tr>
                        <tr>
                            <td>Observation Time</td>
                            <td>@Model.WeatherData.ObservationTime</td>
                        </tr>
                        <tr>
                            <td>Current Conditions</td>
                            <td>@Model.WeatherData.CurrentConditions</td>
                        </tr>
                        <tr>
                            <td>Temperature</td>
                            <td>@Model.WeatherData.Temperature?.ToString("#0.0") &#176; C</td>
                        </tr>
                        <tr>
                            <td>Humidity</td>
                            <td>@Model.WeatherData.Humidity %</td>
                        </tr>
                        <tr>
                            <td>Wind</td>
                            <td>@Model.WeatherData.WindSpeed?.ToString("#0.0") From @Model.WeatherData.WindDirection.Name</td>
                        </tr>
                    </table>
                </p>
                <form action="/Home" method="GET">
                    <div class="row" style="margin-top: 40px">

                        <div class="col-md-7"><b>Get Weather For (Zip Code):</b></div>
                        <div class="col-md-3"><input name="zipcode" type="text" size="8" maxlength="5" /><br /></div>
                        <div class="col-md-2"><button type="submit" class="btn btn-primary">Go</button></div>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-5">


    </div>
</div>



